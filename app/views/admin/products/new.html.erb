            <p class=' text-red-600'><%= @product.errors.full_messages_for(:weight).first %></p>
        <% end %>
    </div>

    <div class="field flex-col py-2 pb-3 font-semibold">
        <%= p.submit 'Cadastrar', class: "btn-primary" %>
    </div>
<% end %>